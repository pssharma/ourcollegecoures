<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ualbany_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity" >


   <EditText
        android:id="@+id/major"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10" 
        android:textColor="#F7FE2E"
        android:textColorHint="#F7FE2E"
        android:hint="Major..."
        android:background="#67587666"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/major"
        android:layout_below="@+id/major"
        android:layout_marginTop="24dp"
        android:background="#67587666"
        android:ems="10"
        android:hint="Year..."
        android:padding="10dp"
        android:textColor="#F7FE2E"
        android:textColorHint="#F7FE2E" >

    </EditText>

    <EditText
        android:id="@+id/semester"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/year"
        android:layout_below="@+id/year"
        android:layout_marginTop="24dp"
        android:background="#67587666"
        android:ems="10"
        android:hint="Semester..."
        android:padding="10dp"
        android:textColor="#F7FE2E"
        android:textColorHint="#F7FE2E" />

    <Button
        android:id="@+id/submit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minor"
        android:layout_below="@+id/minor"
        android:layout_marginTop="56dp"
        android:text="Submit"
        android:textColor="#F7FE2E" 
        android:onClick="submitButton"/>

    <Button
        android:id="@+id/logout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/submit"
        android:layout_below="@+id/submit"
        android:layout_marginTop="22dp"
        android:text="Logout"
        android:textColor="#F7FE2E" 
        android:onClick="logout"/>

    <EditText
        android:id="@+id/minor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/semester"
        android:layout_centerVertical="true"
        android:background="#67587666"
        android:ems="10"
        android:hint="Minor..."
        android:padding="10dp"
        android:textColor="#F7FE2E"
        android:textColorHint="#F7FE2E" />

</RelativeLayout>