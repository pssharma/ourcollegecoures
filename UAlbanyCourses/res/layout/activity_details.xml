<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ualbany_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailsActivity" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course No. :"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/courseNo"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@+id/textView5"
        android:background="#67587666"
        android:editable="false"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/location"
        android:layout_below="@+id/textView5"
        android:background="#67587666"
        android:editable="false"
        android:ems="10"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instructor"
        android:layout_alignTop="@+id/textView1"
        android:background="#67587666"
        android:editable="false"
        android:ems="10"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/instructor"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_alignLeft="@+id/courseNo"
        android:layout_alignTop="@+id/textView2"
        android:background="#67587666"
        android:editable="false"
        android:ems="10"
        android:gravity="left"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" 
        android:linksClickable="true"/>

    <EditText
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/semester"
        android:layout_alignTop="@+id/textView7"
        android:ems="10" 
        android:textColor="#F7FE2E"
        android:background="#67587666" 
        android:editable="false"/>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="14dp"
        android:text="Course Name :"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#F7FE2E"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="14dp"
        android:text="Semester :"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/semester"
        android:layout_marginTop="14dp"
        android:text="Instructor :"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/timings"
        android:text="Timings :"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/timings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instructor"
        android:layout_below="@+id/instructor"
        android:layout_marginTop="16dp"
        android:background="#67587666"
        android:editable="false"
        android:ems="10"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/location"
        android:text="Location :"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timings"
        android:layout_below="@+id/timings"
        android:layout_marginTop="14dp"
        android:background="#67587666"
        android:editable="false"
        android:ems="10"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_centerVertical="true"
        android:text="Course Description :"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <EditText
        android:id="@+id/blogSpot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignRight="@+id/description"
        android:layout_below="@+id/textView8"
        android:background="#67587666"
        android:ems="10"
        android:textColor="#F7FE2E" />

    <TextView
        android:id="@+id/rateMyProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logout"
        android:layout_alignLeft="@+id/editText1"
        android:linksClickable="true"
        android:text="@string/rate_my_professor"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/description"
        android:layout_marginTop="16dp"
        android:text="Blog Spot:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F7FE2E" />

    <Button
        android:id="@+id/logout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/blogSpot"
        android:text="Logout"
        android:textColor="#F7FE2E" />

    <Button
        android:id="@+id/save"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logout"
        android:layout_alignRight="@+id/textView3"
        android:text="Save"
        android:textColor="#F7FE2E" 
        android:onClick="saveBlog"/>

</RelativeLayout>